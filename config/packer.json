{
  "variables": {
    "patterns_root": null,
    "repository_url": null,
    "revision": null,
    "role": null
  },
  "builders": [
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline_shebang": "/bin/bash -x",
      "inline": [
        "if [ ! -d {{user `patterns_root`}} ]; then",
        "  sudo mkdir -p {{user `patterns_root`}}",
        "fi",

        "cd {{user `patterns_root`}}",
        "sudo git clone {{user `repository_url`}}",

        "cd {{user `patterns_root`}}/*",
        "sudo git checkout {{user `revision`}}",

        "if [ -f ./events/init/user-setup ]; then",
        "  sudo SERF_TAG_ROLE={{user `role`}} /opt/chefdk/embedded/bin/ruby ./events/init/user-setup",
        "fi",

        "sync"
      ]
    }
  ]
}
