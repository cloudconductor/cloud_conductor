{
  "variables": {
    "cloudconductor_root": null,
    "cloudconductor_init_url": null,
    "cloudconductor_init_revision": null,
    "pattern_name": null,
    "repository_url": null,
    "revision": null,
    "role": null,
    "image_name": null,
    "consul_security_key": null
  },
  "builders": [
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline_shebang": "/bin/bash -ex",
      "inline": [
        "sudo git clone {{user `cloudconductor_init_url`}} {{user `cloudconductor_root`}}",

        "cd {{user `cloudconductor_root`}}",
        "sudo git checkout {{user `cloudconductor_init_revision`}}",

        "if [ -f ./bin/init.sh ]; then",
        "  sudo ROLE={{user `role`}} PATTERN_NAME={{user `pattern_name`}} PATTERN_URL={{user `repository_url`}} PATTERN_REVISION={{user `revision`}} CONSUL_SECURITY_KEY='{{user `consul_security_key`}}' ./bin/init.sh || cat {{user `cloudconductor_root`}}/logs/event-handler.log",
        "fi",

        "sync"
      ]
    }
  ]
}
